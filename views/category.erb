          <br><br>
          <h2 class="sub-header">Articles in <%= @category["name"]%> </h2>

          <div class="container">
            Search by title: 
            <input type="text" class="form-control" id = "search">
          </div><br>


          <p><a class="btn btn-lg btn-success my-btn" href="/create" role="button">Add article</a></p>

          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Author</th>
                  <th>Updated on</th>
                  <th>Preview</th>
                </tr>
              </thead>
              <tbody>
                <% @articles.each do |art| %>
                    <tr class = "article_titles" id = <%= art["title"] %>>
                      <td><a href=<%="/articles/#{art["id"]}"%>><%= art["title"]%></a></td>
                      <td><a href=<%= "/users/#{art["user_id"]}"%>><%= "#{art["fname"]} #{art["lname"]}"%></a></td>
                      <td><%= art["creation_time"]%></td>
                      <td><%= art["content"][0...100]+"..."%></td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

