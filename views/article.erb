

    <div class="container">

      <div class="row">

        <div class="col-sm-8 blog-main">

          <div class="blog-post">
            <h2 class="blog-post-title"><%= @article["title"] %></h2>
            
            
            <p class="blog-post-meta"> by <a href=<%="/users/#{@article["user_id"]}"%>><%= @article["fname"] %></a></p>
            <p class="blog-post-meta">Updated on <%= @date%> </p>
            <p><%= @content %></p>
            
          </div><!-- /.blog-post -->

          <p><a class="btn btn-lg btn-success" href=<%="/articles/#{@article["id"]}/edit"%> role="button">Edit article</a></p>

          <nav>
            <ul class="pager">
              <li><a href="#">Previous</a></li>
              <li><a href="#">Next</a></li>
            </ul>
          </nav>

        </div><!-- /.blog-main -->

      

      </div><!-- /.row -->

    </div><!-- /.container -->


