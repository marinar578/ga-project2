

    <div class="container">

      <div class="row">

        <div class="col-sm-8 blog-main">

          <div class="blog-post">
            <h2 class="blog-post-title"><%= @article["title"] %></h2>
            <p><a class="btn btn-lg btn-success" href=<%="/articles/#{@article["id"]}/edit"%> role="button">Edit article</a></p>
            <p class="blog-post-meta"><%= @date%> by <a href="#"><%= @article["fname"] %></a></p>

            <p><%= @article["content"] %></p>
            
          </div><!-- /.blog-post -->

          

          <nav>
            <ul class="pager">
              <li><a href="#">Previous</a></li>
              <li><a href="#">Next</a></li>
            </ul>
          </nav>

        </div><!-- /.blog-main -->

      

      </div><!-- /.row -->

    </div><!-- /.container -->


