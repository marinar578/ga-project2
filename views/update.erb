

    <div class="container">

      <div class="row">

        <div class="col-sm-8 blog-main">

          <div class="blog-post">
            <h2 class="blog-post-title"><%= @update["title"] %></h2>
            
            
            <p class="blog-post-meta"> by <a href=<%="/users/#{@update["user_id"]}"%>><%= @update["fname"] %></a></p>
